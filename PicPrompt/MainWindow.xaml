<Window x:Class="PicPrompt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicPrompt"
        xmlns:c="clr-namespace:PicPrompt.Resources.Controls"
        mc:Ignorable="d"
        Style="{StaticResource NativeWindowStyle}"
        Width="800" Height="600"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Title="PicPrompt">
    <Grid>
        <Grid
            x:Name="TitleBar"
            Height="32"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Margin="0,-32,0,0">
            <Button
                Style="{StaticResource TransparentButtonStyle}"
                Width="32" Height="32"
                HorizontalAlignment="Left"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <Button.ContextMenu>
                    <ContextMenu
                        x:Name="Context">
                        <MenuItem Header="Open" InputGestureText="Ctrl+O"/>
                        <MenuItem Header="Save As" InputGestureText="Ctrl+S"/>
                        <Separator/>
                        <MenuItem Header="Zoom In" InputGestureText="Ctrl++"/>
                        <MenuItem Header="Zoom Refresh" InputGestureText="Ctrl+0"/>
                        <MenuItem Header="Zoom Out" InputGestureText="Ctrl+-"/>
                        <Separator/>
                        <MenuItem Header="Options"/>
                        <MenuItem Header="About"/>
                        <Separator/>
                        <MenuItem Header="Quit"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="ButtonBase.Click">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames
                                        Storyboard.TargetName="Context"
                                        Storyboard.TargetProperty="IsOpen">
                                        <DiscreteBooleanKeyFrame
                                            KeyTime="0:0:0:0"
                                            Value="True"/>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Button.Triggers>
                <Image
                    Width="16" Height="16"
                    Source="Resources/Images/icon.png"/>
            </Button>
            <Label
                Foreground="#3F808080"
                HorizontalAlignment="Left"
                Margin="32,0,0,0"
                Padding="5,7,5,5"
                Content="|"/>
            <Label
                Foreground="Gray"
                HorizontalAlignment="Left"
                Margin="46,0,0,0"
                Padding="5,7,5,5"
                FontFamily="Segoe UI Semibold"
                FontSize="13"
                Content="PicPrompt"/>
            <Button
                x:Name="Close"
                Style="{StaticResource TransparentButtonStyle}"
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                WindowChrome.IsHitTestVisibleInChrome="True" 
                Click="Close_Click">
                <Path
                    Fill="White"
                    Width="8" Height="8"
                    Data="{StaticResource IconClose}"
                    Stretch="Fill"
                    RenderOptions.EdgeMode="Aliased"/>
            </Button>
            <Button
                x:Name="MaximizeOrRestore"
                Style="{StaticResource TransparentButtonStyle}"
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,32,0"
                WindowChrome.IsHitTestVisibleInChrome="True" 
                Click="MaximizeOrRestore_Click">
                <Path
                    Fill="White"
                    Width="8" Height="8"
                    Data="{StaticResource IconSquare}"
                    Stretch="Fill"
                    RenderOptions.EdgeMode="Aliased"/>
            </Button>
            <Button
                x:Name="Minimize"
                Style="{StaticResource TransparentButtonStyle}"
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,64,0"
                WindowChrome.IsHitTestVisibleInChrome="True" 
                Click="Minimize_Click">
                <Path
                    Fill="White"
                    Width="8" Height="1"
                    Margin="0,2,0,0"
                    Data="{StaticResource IconMinus}"
                    Stretch="Fill"
                    RenderOptions.EdgeMode="Aliased"/>
            </Button>
        </Grid>
        <Image
            x:Name="Viewer"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image
                Width="98" Height="98"
                Margin="0,0,0,100"
                Source="Resources/Images/drag-and-drop.png"
                RenderOptions.BitmapScalingMode="Fant"/>
            <Label
                Foreground="Gray"
                Height="32"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="0,0,0,40"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="16"
                Content="Drag &amp; Drop"/>
            <Label
                Foreground="#FF535353"
                Height="32"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="16"
                Content="or"/>
            <c:ClickableLabel
                Style="{StaticResource LabelButtonStyle}"
                Foreground="Gray"
                Width="50"  Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontFamily="Segoe UI Semibold"
                FontSize="16"
                Content="Open"/>
        </Grid>
        <Grid
            x:Name="Toolbar"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,30">
            <Button
                Style="{StaticResource RoundedTransparentButtonStyle}"
                Width="40" Height="40"

                Margin="0,0,85,0">
                <Path
                    Fill="#7FFFFFFF"
                    Width="18" Height="18"
                    Margin="0,2,0,0"
                    Data="{StaticResource IconZoomIn}"
                    Stretch="Fill"/>
            </Button>
            <Button
                Style="{StaticResource RoundedTransparentButtonStyle}"
                Width="40" Height="40"
                Margin="42.5,0">
                <Path
                    Fill="#7FFFFFFF"
                    Width="16" Height="16"
                    Margin="0,2,0,0"
                    Data="{StaticResource IconRefresh}"
                    Stretch="Fill"/>
            </Button>
            <Button
                Style="{StaticResource RoundedTransparentButtonStyle}"
                Width="40" Height="40"
                Margin="85,0,0,0">
                <Path
                    Fill="#7FFFFFFF"
                    Width="18" Height="18"
                    Margin="0,2,0,0"
                    Data="{StaticResource IconZoomOut}"
                    Stretch="Fill"/>
            </Button>
        </Grid>
    </Grid>
</Window>
